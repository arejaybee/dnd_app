<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="15sp"
            android:background="?attr/colorPrimary">

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingRight="10sp"
                android:paddingLeft="10sp"
                android:background="@android:color/transparent"
                app:srcCompat="?attr/homeAsUpIndicator"
                android:tint="@color/white"
                android:onClick="onClickBackNotes"
                android:layout_marginRight="10sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0sp"
                android:padding="0sp">
                <TextView
                    android:id="@+id/tbms_titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Note"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/aen_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tbms_titleText"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10sp"
                    android:background="@android:color/transparent"
                    android:onClick="onClickSave"
                    app:srcCompat="@android:drawable/ic_menu_save" />

                <ImageButton
                    android:id="@+id/aen_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tbms_titleText"
                    android:layout_marginRight="10sp"
                    android:background="@android:color/transparent"
                    android:onClick="onClickEditNoteDelete"
                    android:layout_toLeftOf="@+id/aen_save"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
            </RelativeLayout>
        </Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10sp"
                    android:paddingLeft="10sp"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="Hello World"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/aenet_title"/>
                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="10sp"
                        android:background="?android:attr/listDivider" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200sp"
                        android:background="@drawable/edit_text_border"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text=""
                        android:gravity="top"
                        android:id="@+id/aenet_text"/>
                </LinearLayout>
            </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>