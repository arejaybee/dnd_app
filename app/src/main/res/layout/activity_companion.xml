<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10sp"
        android:id="@+id/activity_main">

        <include layout="@layout/title_bar"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:orientation="vertical">


                <include layout="@layout/navigation"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="Companions"
                        android:textColor="@color/black"
                        android:id="@+id/actv_titleText"/>

                    <ImageButton
                        android:id="@+id/acib_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickLoad"
                        android:background="@android:color/transparent"
                        app:srcCompat="@android:drawable/ic_menu_edit"
                        android:layout_alignBottom="@id/actv_titleText"
                        android:layout_marginRight="10sp"
                        android:layout_alignParentRight="true"/>
                    <ImageButton
                        android:id="@+id/acib_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickNew"
                        android:background="@android:color/transparent"
                        app:srcCompat="@android:drawable/ic_menu_add"
                        android:layout_alignBottom="@id/actv_titleText"
                        android:layout_marginRight="10sp"
                        android:layout_toLeftOf="@id/acib_edit"/>

                    <ImageButton
                        android:id="@+id/acib_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClickDelete"
                        android:layout_marginRight="10sp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@android:drawable/ic_menu_delete"
                        android:layout_alignBottom="@+id/actv_titleText"
                        android:layout_toLeftOf="@id/acib_add"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginBottom="3sp"
                    android:layout_marginTop="3sp"
                    android:background="?android:attr/listDivider" />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- This will eventually be programatically generated -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/acll_characterListLayout"
                        android:orientation="vertical"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"/>
                </ScrollView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>