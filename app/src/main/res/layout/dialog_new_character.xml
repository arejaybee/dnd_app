<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.arejaybee.character_sheet.dialog_fragments.NewCharacterDialogFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:paddingTop="10sp"
            android:layout_marginBottom="10sp">
            <TextView
                android:text="Game Edition"/>
            <TextView android:layout_width="50sp"/>
            <TextView
                android:text="Use Default Skills"/>
            <Spinner
                android:minHeight="50sp"
                android:spinnerMode="dropdown"
                android:id="@+id/fncs_edition" />
            <TextView
                android:layout_width="50sp"/>
            <CheckBox
                android:checked="true"
                android:layout_gravity="center"
                android:id="@+id/fncs_skills" />
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignBottom="@id/feset_delete"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20sp"
            android:paddingTop="5sp"
            android:paddingBottom="10sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTINUE"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:id="@+id/fncbtn_create"/>
            <TextView
                android:layout_width="30sp"
                android:layout_height="0sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:id="@+id/fncbtn_cancel"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
