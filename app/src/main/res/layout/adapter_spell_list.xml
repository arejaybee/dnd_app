
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_spell_list_name"
            android:textSize="@dimen/text_subHeader"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adapter_spell_list_toggle"
            android:background="@android:color/transparent"
            app:srcCompat="@android:drawable/ic_menu_more"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:id="@+id/adapter_spell_list_grid"
        android:visibility="gone"
        android:columnCount="2">
        <TextView
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="@string/per_day"/>
        <TextView
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:text="@string/cast"/>
        <EditText
            android:layout_columnWeight="1"
            android:background="@android:drawable/edit_text"
            android:text="0"
            android:id="@+id/adapter_spell_list_daily"
            android:gravity="center"/>
        <EditText
            android:layout_columnWeight="1"
            android:background="@android:drawable/edit_text"
            android:text="0"
            android:id="@+id/adapter_spell_list_cast"
            android:gravity="center"/>
    </GridLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/spell_recycler">

    </androidx.recyclerview.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>