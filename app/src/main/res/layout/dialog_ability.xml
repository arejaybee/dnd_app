<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_columnWeight="1"
                    android:textSize="@dimen/text_field_header"
                    android:text="@string/ability_dialog_title_field"/>
                <EditText
                    android:layout_columnWeight="1"
                    android:background="@drawable/edit_text_border"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/ability_dialog_title_edittext"/>
                <TextView
                    android:layout_columnWeight="1"
                    android:textSize="@dimen/text_field_header"
                    android:text="@string/ability_dialog_description_field"/>
                <EditText
                    android:layout_columnWeight="1"
                    android:background="@drawable/edit_text_border"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/ability_dialog_description_edittext"/>
                <TextView
                    android:layout_columnWeight="1"
                    android:textSize="@dimen/text_field_header"
                    android:text="@string/ability_dialog_type_field"/>
                <Spinner
                    android:layout_height="20dp"
                    android:layout_columnWeight="1"
                    android:layout_width="200dp"
                    android:spinnerMode="dropdown"
                    android:id="@+id/ability_dialog_type_spinner"/>

            </GridLayout>
        </LinearLayout>
    </ScrollView>