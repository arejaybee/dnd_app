<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/nll_noteList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/nbtn_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/ntv_titleText"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:onClick="onClickNew"
                        app:srcCompat="@android:drawable/ic_menu_add" />

                    <ImageButton
                        android:id="@+id/nbtn_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/ntv_titleText"
                        android:layout_marginEnd="10sp"
                        android:layout_toStartOf="@id/nbtn_new"
                        android:background="@android:color/transparent"
                        android:onClick="onClickEdit"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                    <ImageButton
                        android:id="@+id/nbtn_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ntv_titleText"
                        android:layout_marginEnd="10sp"
                        android:layout_toStartOf="@id/nbtn_edit"
                        android:background="@android:color/transparent"
                        android:onClick="onClickDelete"
                        app:srcCompat="@android:drawable/ic_menu_delete" />

                    <TextView
                        android:id="@+id/ntv_titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="30sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="6sp"
                    android:layout_marginBottom="10sp"
                    android:background="?android:attr/listDivider" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>