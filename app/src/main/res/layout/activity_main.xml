<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginBottom="15sp"
        android:foregroundGravity="right"
        app:popupTheme="@style/AppTheme.PopupOverlay">
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/tbms_titleText"
                 android:text="Character Sheet"
                 android:textColor="@color/white"
                 android:textSize="25sp"/>

             <ImageButton
                 android:id="@+id/imageButton6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="onClickLoad"
                 android:background="@android:color/transparent"
                 app:srcCompat="@android:drawable/ic_menu_edit"
                 android:layout_alignBottom="@id/tbms_titleText"
                 android:layout_marginEnd="10sp"
                 android:layout_alignParentEnd="true"/>
             <ImageButton
                 android:id="@+id/imageButton3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="onClickNew"
                 android:background="@android:color/transparent"
                 app:srcCompat="@android:drawable/ic_menu_add"
                 android:layout_alignBottom="@id/tbms_titleText"
                 android:layout_marginEnd="5sp"
                 android:layout_toStartOf="@id/imageButton6"/>

             <ImageButton
                 android:id="@+id/imageButton5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="onClickDelete"
                 android:background="@android:color/transparent"
                 app:srcCompat="@android:drawable/ic_menu_delete"
                 android:layout_alignBottom="@+id/tbms_titleText"
                 android:layout_marginEnd="5sp"
                 android:layout_toStartOf="@id/imageButton3"/>

             <ImageButton
                 android:id="@+id/imageButton4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="onClickEmail"
                 android:layout_toStartOf="@+id/imageButton5"
                 android:background="@android:color/transparent"
                 android:layout_alignBottom="@id/tbms_titleText"
                 app:srcCompat="@android:drawable/ic_menu_send" />
        </RelativeLayout>
    </Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp">
            <!-- This will eventually be programatically generated -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llms_characterListLayout"
                android:orientation="vertical"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"/>
    </ScrollView>
</LinearLayout>